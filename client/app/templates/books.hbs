<div class="form-inline panel panel-default">
  <div class="form-group pull-right">
    <button class="btn btn-primary" {{action refreshBooks}}>
      Refresh
    </button>
  </div>
  <form>
    <div class="form-group">
      {{view Ember.TextField valueBinding=newISBN class='form-control col-md-1'
        placeholder='ISBN' type="text" required="required" pattern="^((\d{10})|(\d{13}))$"}}
    </div>
    <button class="btn btn-success" {{bind-attr disabled="newISBNInvalid" }} {{action addBook newISBN}}>
      Add Book
    </button>
  </form>
</div>

<div class="row">
  <div class="col-md-4 books">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Filter
        </h3>
      </div>
      <div class="panel-body">
        <p class="input-group">
          <span class="input-group-addon">Min. Value in Â¢</span>
          {{view Ember.TextField valueBinding=minPrice class='form-control'}}
        </p>
        <p class="input-group">
          <span class="input-group-addon">Titel/Author</span>
          {{view Ember.TextField valueBinding=searchText class='form-control'}}
        </p>
      </div>
    </div>

    <div class="list-group">
    {{#each book in filtered}}
      {{#link-to 'book' book.id class='list-group-item'}}
        <span class="badge">
          {{money book.currentPrice}}
          <span {{bind-attr class=":glyphicon book.trend2glyph"}}></span>
        </span>
        <h4 class="list-group-item-heading">{{truncate book.title length=42}}</h4>
        <p class="list-group-item-text">{{book.author}}</p>
      {{/link-to}}
    {{else}}
      <div class="list-group-item">
        <h4 class="list-group-item-heading">
          No books.
        </h4>
        <p class="list-group-item-text text-muted">
          Add some or change filter. Or maybe it's just still loading.
        </p>
      </div>
    {{/each}}

      <div class="list-group-item">
        <p class="list-group-item-text text-right">
          <small class="text-muted">TOTAL</small>
          <strong class="text-success">{{money priceSum}}</strong>
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    {{outlet}}
  </div>
</div>