<div class="row">
  <div class="col-md-4 books">
    <div class="list-group">
    {{#each model}}
      {{#linkTo 'book' id class=list-group-item}}
        <span class="badge">{{money currentPrice}}</span>
        <h4 class="list-group-item-heading">{{truncate title length=42}}</h4>
        <p class="list-group-item-text">{{author}}</p>
      {{/linkTo}}
    {{/each}}
    </div>
  </div>
  <div class="col-md-8">
    {{outlet}}
  </div>
</div>