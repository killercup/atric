<article class="book panel panel-default">
  <div class="row">
    <div class="col-md-8">
      <h1>{{title}}</h1>
      <h2>{{author}}</h2>

      <p>
        <button class="btn btn-danger"{{action 'deleteBook'}}>
          Remove Book
        </button>
      </p>
    </div>
    <div class="col-md-4">
      {{#if amazon}}
        <a {{bindAttr href=amazon.url}} class="thumbnail" title="View on Amazon">
          <img {{bindAttr src="amazon.image"}} alt="cover"/>
        </a>
      {{/if}}
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      {{#each prices}}
        <tr>
          <td>{{date}}</td>
          <td>{{value}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</article>