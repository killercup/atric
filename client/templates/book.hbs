<article class="book panel panel-default">
  <header class="panel-heading">
    <h1>
      {{title}}
      {{#if author}}
      <small>by {{author}}</small>
      {{/if}}
    </h1>
  </header>
  <div class="row panel-body">
    <div class="col-md-8">
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          {{#each prices}}
            <tr>
              <td>{{date}}</td>
              <td>{{value}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      {{#if amazon}}
        <a {{bindAttr href=amazon.url}} class="thumbnail" title="View on Amazon">
          <img {{bindAttr src="amazon.image"}} alt="cover"/>
        </a>
      {{/if}}
    </div>
  </div>

  <footer class="panel-footer clearfix">
    <button class="pull-right btn btn-danger"{{action 'deleteBook'}}>
      Remove Book
    </button>
  </div>
</article>